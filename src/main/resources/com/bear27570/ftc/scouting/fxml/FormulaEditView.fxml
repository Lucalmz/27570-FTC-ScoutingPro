<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox spacing="15" alignment="CENTER" style="-fx-background-color: #1C2533;" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bear27570.ftc.scouting.controllers.FormulaEditController">
    <padding><Insets top="30" right="30" bottom="30" left="30"/></padding>

    <Label text="Edit Rating Formula" styleClass="header-label"/>
    <Label text="Variables: auto, teleop, seq (0/1), climb (0/1), total" textFill="#B0BEC5"/>
    <Label text="Math: +, -, *, /, ^, sqrt(), abs()" textFill="#B0BEC5"/>
    <Label text="Example: (auto / 2) * 5 + (teleop / 2) * 3 + (seq ? 10 : 0)" textFill="#80CBC4" style="-fx-font-style: italic;"/>

    <TextField fx:id="formulaField" promptText="e.g. total + (auto * 5)" prefWidth="400"/>

    <Label fx:id="errorLabel" styleClass="error-label"/>

    <HBox spacing="10" alignment="CENTER">
        <Button onAction="#handleSave" text="Save &amp; Apply"/>
        <Button onAction="#handleReset" text="Reset Default" styleClass="logout-button"/>
        <Button onAction="#handleCancel" text="Cancel"/>
    </HBox>
</VBox>