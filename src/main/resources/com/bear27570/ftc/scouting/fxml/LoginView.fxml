<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #1C2533;" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bear27570.ftc.scouting.controllers.LoginController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>
    <Label styleClass="header-label" text="FTC Scouting Pro" />
    <Label text="Please login or create a new user." />
    <TextField fx:id="usernameField" maxWidth="250" promptText="Username" />
    <PasswordField fx:id="passwordField" maxWidth="250" promptText="Password" />
    <HBox alignment="CENTER" spacing="10.0">
        <Button onAction="#handleLoginButton" prefWidth="120" text="Login" />
        <Button onAction="#handleCreateUserButton" prefWidth="120" text="Create User" />
    </HBox>
    <Label fx:id="messageLabel" styleClass="error-label" />
</VBox>
