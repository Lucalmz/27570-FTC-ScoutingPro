<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #1C2533;" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bear27570.ftc.scouting.controllers.LoginController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>
    <Label styleClass="header-label" text="FTC Scorer Pro" />
    <Label text="Please login or create a new user." />
    <TextField fx:id="usernameField" promptText="Username" maxWidth="250" />
    <PasswordField fx:id="passwordField" promptText="Password" maxWidth="250" />
    <HBox alignment="CENTER" spacing="10.0">
        <Button onAction="#handleLoginButton" text="Login" prefWidth="120" />
        <Button onAction="#handleCreateUserButton" text="Create User" prefWidth="120" />
    </HBox>
    <Label fx:id="messageLabel" styleClass="error-label" />
</VBox>