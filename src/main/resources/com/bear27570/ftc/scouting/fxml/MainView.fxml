<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="768.0" prefWidth="1280.0" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bear27570.ftc.scouting.controllers.MainController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #2A3B4F;">
            <padding><Insets bottom="10" left="20" right="20" top="10" /></padding>
            <Label fx:id="competitionNameLabel" styleClass="header-label" text="Competition Name" />
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#handleBackButton" text="Back to Hub" />
            <Button onAction="#handleLogout" styleClass="logout-button" text="Logout" />
        </HBox>
    </top>

    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <!-- TAB 1: SCORING -->
                <Tab text="Scoring">
                    <content>
                        <VBox alignment="CENTER" spacing="20">
                            <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
                            <VBox fx:id="scoringFormVBox" maxWidth="450" spacing="10" styleClass="sidebar">
                                <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
                                <Label style="-fx-font-weight: bold;" text="Recording Mode" />
                                <HBox spacing="15">
                                    <RadioButton fx:id="allianceModeRadio" selected="true" text="Alliance (2 Teams)" textFill="WHITE" />
                                    <RadioButton fx:id="singleModeRadio" text="Single Team" textFill="WHITE" />
                                </HBox>
                                <Separator />
                                <Label text="Match &amp; Alliance" />
                                <HBox spacing="10">
                                    <TextField fx:id="matchNumberField" promptText="Match #" HBox.hgrow="ALWAYS" />
                                </HBox>
                                <HBox alignment="CENTER" spacing="5">
                                    <ToggleButton fx:id="redAllianceToggle" maxWidth="Infinity" text="Red Alliance" HBox.hgrow="ALWAYS" />
                                    <ToggleButton fx:id="blueAllianceToggle" maxWidth="Infinity" text="Blue Alliance" HBox.hgrow="ALWAYS" />
                                </HBox>
                                <Label text="Teams" />
                                <GridPane hgap="10" vgap="8">
                                    <Label text="Team 1 #" />
                                    <TextField fx:id="team1Field" GridPane.columnIndex="1" />
                                    <VBox spacing="2" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                        <CheckBox fx:id="team1IgnoreCheck" style="-fx-text-fill: #ffaaaa; -fx-font-size: 10px;" text="Mark as Weak/Ignore" />
                                        <Label fx:id="team1WarningLabel" style="-fx-font-size: 10px; -fx-font-weight: bold;" text="âš ï¸ Flagged in prev matches!" textFill="ORANGE" visible="false" />
                                    </VBox>
                                    <Label fx:id="lblTeam2" text="Team 2 #" GridPane.rowIndex="2" />
                                    <TextField fx:id="team2Field" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                    <VBox fx:id="team2IgnoreBox" spacing="2" GridPane.columnIndex="1" GridPane.rowIndex="3">
                                        <CheckBox fx:id="team2IgnoreCheck" style="-fx-text-fill: #ffaaaa; -fx-font-size: 10px;" text="Mark as Weak/Ignore" />
                                        <Label fx:id="team2WarningLabel" style="-fx-font-size: 10px; -fx-font-weight: bold;" text="âš ï¸ Flagged in prev matches!" textFill="ORANGE" visible="false" />
                                    </VBox>
                                    <columnConstraints><ColumnConstraints prefWidth="80" /><ColumnConstraints hgrow="ALWAYS" /></columnConstraints>
                                    <rowConstraints><RowConstraints /><RowConstraints /><RowConstraints /><RowConstraints /></rowConstraints>
                                </GridPane>
                                <Separator />
                                <Label text="Artifacts / Scoring" />
                                <GridPane hgap="10" vgap="8">
                                    <Label text="Auto Artifacts" />
                                    <TextField fx:id="autoArtifactsField" text="0" GridPane.columnIndex="1" />
                                    <Label text="TeleOp Artifacts" GridPane.rowIndex="1" />
                                    <HBox alignment="CENTER_LEFT" spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                        <TextField fx:id="teleopArtifactsField" prefWidth="60" text="0" />
                                        <Button onAction="#handleOpenFieldInput" style="-fx-font-size: 11px; -fx-padding: 4 8 4 8;" text="ðŸ“ Record" />
                                    </HBox>
                                    <columnConstraints><ColumnConstraints prefWidth="100" /><ColumnConstraints hgrow="ALWAYS" /></columnConstraints>
                                    <rowConstraints><RowConstraints /><RowConstraints /></rowConstraints>
                                </GridPane>
                                <Separator />
                                <Label text="End Game / Capabilities" />
                                <HBox spacing="20">
                                    <VBox spacing="5">
                                        <Label style="-fx-text-fill: gray; -fx-font-size: 10px;" text="Team 1" />
                                        <CheckBox fx:id="team1SequenceCheck" text="Can Sequence" />
                                        <CheckBox fx:id="team1L2ClimbCheck" text="L2 Climb" />
                                    </VBox>
                                    <VBox fx:id="team2CapsBox" spacing="5">
                                        <Label style="-fx-text-fill: gray; -fx-font-size: 10px;" text="Team 2" />
                                        <CheckBox fx:id="team2SequenceCheck" text="Can Sequence" />
                                        <CheckBox fx:id="team2L2ClimbCheck" text="L2 Climb" />
                                    </VBox>
                                </HBox>
                                <Separator />
                                <Label fx:id="submitterLabel" text="Submitter: " />
                                <Button maxWidth="Infinity" onAction="#handleSubmitButtonAction" styleClass="submit-button" text="Submit Score Entry" />
                                <Label fx:id="errorLabel" styleClass="error-label" wrapText="true" />
                                <Label fx:id="statusLabel" text="" />
                            </VBox>
                        </VBox>
                    </content>
                </Tab>

                <!-- TAB: PENALTIES (JUDGE) -->
                <Tab text="Penalties">
                    <content>
                        <VBox alignment="CENTER" spacing="20">
                            <padding><Insets bottom="40" top="40" /></padding>
                            <VBox maxWidth="450" spacing="15" styleClass="sidebar">
                                <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
                                <Label styleClass="sub-header-label" text="Record Offending Alliance" />
                                <Separator />

                                <HBox alignment="CENTER_LEFT" spacing="10">
                                    <Label text="Match Number: " />
                                    <TextField fx:id="penMatchField" prefWidth="80" />
                                </HBox>

                                <Label text="Select Alliance that Committed Foul:" />
                                <HBox alignment="CENTER" spacing="10">
                                    <ToggleButton fx:id="penRedToggle" maxWidth="Infinity" style="-fx-base: #FF5252;" text="RED Alliance" HBox.hgrow="ALWAYS" />
                                    <ToggleButton fx:id="penBlueToggle" maxWidth="Infinity" style="-fx-base: #448AFF;" text="BLUE Alliance" HBox.hgrow="ALWAYS" />
                                </HBox>

                                <GridPane hgap="15" vgap="10">
                                    <Label text="Major (15pts)" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                    <TextField fx:id="penMajor" text="0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                    <Label text="Minor (5pts)" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                    <TextField fx:id="penMinor" text="0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    <columnConstraints>
                                        <ColumnConstraints prefWidth="120.0" />
                                        <ColumnConstraints hgrow="ALWAYS" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints />
                                        <RowConstraints />
                                    </rowConstraints>
                                </GridPane>

                                <Separator />
                                <Button maxWidth="Infinity" onAction="#handleSubmitPenalty" styleClass="submit-button" text="Save Penalty" />
                                <Label fx:id="penStatusLabel" alignment="CENTER" text="" wrapText="true" />
                            </VBox>
                        </VBox>
                    </content>
                </Tab>

                <!-- TAB 2: RANKINGS -->
                <Tab text="Team Rankings">
                    <content>
                        <VBox spacing="10">
                            <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <Label styleClass="table-header-label" text="Live Rankings" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Button onAction="#handleAllianceAnalysis" style="-fx-base: #9C27B0;" text="Alliance Analysis" />
                                <Button fx:id="editRatingButton" managed="false" onAction="#handleEditRating" text="Edit Rating Formula" visible="false" />
                            </HBox>
                            <Label fx:id="rankingLegendLabel" style="-fx-font-style: italic; -fx-font-size: 12px;" text="Legend..." textFill="#B0BEC5" wrapText="true" />
                            <TableView fx:id="rankingsTableView" VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="rankTeamCol" prefWidth="70" text="Team #" />
                                    <TableColumn fx:id="rankHeatmapCol" prefWidth="85" text="Map" />
                                    <TableColumn fx:id="rankRatingCol" prefWidth="80" text="Rating" />
                                    <TableColumn fx:id="rankMatchesCol" prefWidth="60" text="Plays" />
                                    <TableColumn fx:id="rankAutoCol" text="Avg Auto" />
                                    <TableColumn fx:id="rankTeleopCol" text="Avg Tele" />
                                    <TableColumn fx:id="rankAccuracyCol" text="Accuracy" />
                                    <TableColumn fx:id="rankPenCommCol" text="Avg Pen Given" />
                                    <TableColumn fx:id="rankPenOppCol" text="Avg Pen Got" />
                                    <TableColumn fx:id="rankSequenceCol" text="Seq %" />
                                    <TableColumn fx:id="rankL2Col" text="L2 %" />
                                </columns>
                                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                            </TableView>
                        </VBox>
                    </content>
                </Tab>

                <!-- TAB 3: HISTORY -->
                <Tab text="Score History">
                    <content>
                        <VBox spacing="10">
                            <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
                            <TextField fx:id="searchField" promptText="Search by Match #, Team #..." />
                            <TableView fx:id="historyTableView" VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="histMatchCol" text="Match" />
                                    <TableColumn fx:id="histAllianceCol" text="Alliance" />
                                    <TableColumn fx:id="histTeamsCol" text="Teams" />
                                    <TableColumn fx:id="histTotalCol" text="Total Score" />
                                    <TableColumn fx:id="histSubmitterCol" text="Submitter" />
                                    <TableColumn fx:id="histTimeCol" text="Timestamp" />
                                </columns>
                                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                            </TableView>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
