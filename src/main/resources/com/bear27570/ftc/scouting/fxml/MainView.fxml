<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="768.0" prefWidth="1280.0" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bear27570.ftc.scouting.controllers.MainController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #2A3B4F;">
            <padding><Insets bottom="10" left="20" right="20" top="10" /></padding>
            <Label fx:id="competitionNameLabel" styleClass="header-label" text="Competition Name" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="manageMembersBtn" onAction="#handleManageMembers" style="-fx-base: #FF9800;" text="Manage Members" visible="false" />
            <Button onAction="#handleAllianceAnalysis" style="-fx-base: #9C27B0;" text="Alliance Analysis" />
            <Button onAction="#handleBackButton" text="Back to Hub" />
            <Button onAction="#handleLogout" styleClass="logout-button" text="Logout" />
        </HBox>
    </top>

    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <!-- TAB 1: SCORING (å·²åŠ å…¥ ScrollPane) -->
                <Tab text="Scoring">
                    <content>
                        <ScrollPane fitToWidth="true" style="-fx-background: #1C2533; -fx-background-color: transparent;">
                            <VBox alignment="CENTER" spacing="20">
                                <padding><Insets bottom="30" left="20" right="20" top="30" /></padding>
                                <VBox fx:id="scoringFormVBox" maxWidth="480" spacing="10" styleClass="sidebar">
                                    <padding><Insets bottom="25" left="25" right="25" top="25" /></padding>
                                    <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Recording Mode" />
                                    <HBox spacing="15">
                                        <RadioButton fx:id="allianceModeRadio" selected="true" text="Alliance (2 Teams)" textFill="WHITE" />
                                        <RadioButton fx:id="singleModeRadio" text="Single Team" textFill="WHITE" />
                                    </HBox>
                                    <Separator />
                                    <Label text="Match &amp; Alliance" />
                                    <HBox spacing="10">
                                        <TextField fx:id="matchNumberField" promptText="Match #" HBox.hgrow="ALWAYS" />
                                        <HBox alignment="CENTER" spacing="5">
                                            <ToggleButton fx:id="redAllianceToggle" text="Red" prefWidth="80" />
                                            <ToggleButton fx:id="blueAllianceToggle" text="Blue" prefWidth="80" />
                                        </HBox>
                                    </HBox>
                                    <Label text="Teams" />
                                    <GridPane hgap="10" vgap="12">
                                        <Label text="Team 1 #" />
                                        <TextField fx:id="team1Field" GridPane.columnIndex="1" />
                                        <CheckBox fx:id="team1IgnoreCheck" text="Mark as Weak" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-font-size: 11px;"/>
                                        <CheckBox fx:id="team1BrokenCheck" text="Robot Broken" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-font-size: 11px;"/>

                                        <Label fx:id="lblTeam2" text="Team 2 #" GridPane.rowIndex="3" />
                                        <TextField fx:id="team2Field" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                        <CheckBox fx:id="team2IgnoreCheck" text="Mark as Weak" GridPane.columnIndex="1" GridPane.rowIndex="4" style="-fx-font-size: 11px;"/>
                                        <CheckBox fx:id="team2BrokenCheck" text="Robot Broken" GridPane.columnIndex="1" GridPane.rowIndex="5" style="-fx-font-size: 11px;"/>

                                        <columnConstraints><ColumnConstraints prefWidth="100"/><ColumnConstraints hgrow="ALWAYS"/></columnConstraints>
                                    </GridPane>
                                    <Separator />
                                    <Label text="Scoring Data" />
                                    <GridPane hgap="10" vgap="10">
                                        <Label text="Auto Artifacts" />
                                        <TextField fx:id="autoArtifactsField" text="0" GridPane.columnIndex="1" />
                                        <Label text="TeleOp Hits" GridPane.rowIndex="1" />
                                        <HBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                            <TextField fx:id="teleopArtifactsField" text="0" prefWidth="80"/>
                                            <Button onAction="#handleOpenFieldInput" text="ðŸ“ Map" style="-fx-font-size: 12px;"/>
                                        </HBox>
                                    </GridPane>
                                    <Separator />
                                    <Label text="Capabilities" />
                                    <HBox spacing="30">
                                        <VBox spacing="8">
                                            <Label text="T1" style="-fx-text-fill: gray;"/>
                                            <CheckBox fx:id="team1SequenceCheck" text="Sequence" />
                                            <CheckBox fx:id="team1L2ClimbCheck" text="L2 Climb" />
                                        </VBox>
                                        <VBox fx:id="team2CapsBox" spacing="8">
                                            <Label text="T2" style="-fx-text-fill: gray;"/>
                                            <CheckBox fx:id="team2SequenceCheck" text="Sequence" />
                                            <CheckBox fx:id="team2L2ClimbCheck" text="L2 Climb" />
                                        </VBox>
                                    </HBox>
                                    <Separator />
                                    <Button maxWidth="Infinity" onAction="#handleSubmitButtonAction" styleClass="submit-button" text="Submit Score Entry" prefHeight="40" />
                                    <Label fx:id="submitterLabel" text="Submitter: " style="-fx-font-size: 11px; -fx-text-fill: gray;" />
                                    <Label fx:id="errorLabel" styleClass="error-label" wrapText="true" />
                                    <Label fx:id="statusLabel" text="" />
                                </VBox>
                            </VBox>
                        </ScrollPane>
                    </content>
                </Tab>

                <!-- TAB 2: PENALTIES (ä¹ŸåŠ å…¥äº† ScrollPane) -->
                <Tab text="Penalties">
                    <content>
                        <ScrollPane fitToWidth="true" style="-fx-background: #1C2533; -fx-background-color: transparent;">
                            <VBox alignment="CENTER" spacing="20">
                                <padding><Insets bottom="40" top="40" /></padding>
                                <VBox maxWidth="450" spacing="15" styleClass="sidebar">
                                    <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
                                    <Label styleClass="sub-header-label" text="Record Foul" />
                                    <Separator />
                                    <HBox alignment="CENTER_LEFT" spacing="10">
                                        <Label text="Match #:" />
                                        <TextField fx:id="penMatchField" prefWidth="80" />
                                    </HBox>
                                    <Label text="Alliance that fouled:" />
                                    <HBox alignment="CENTER" spacing="10">
                                        <ToggleButton fx:id="penRedToggle" maxWidth="Infinity" style="-fx-base: #FF5252;" text="RED" HBox.hgrow="ALWAYS" />
                                        <ToggleButton fx:id="penBlueToggle" maxWidth="Infinity" style="-fx-base: #448AFF;" text="BLUE" HBox.hgrow="ALWAYS" />
                                    </HBox>
                                    <GridPane hgap="15" vgap="10">
                                        <Label text="Major (15pts)" />
                                        <TextField fx:id="penMajor" text="0" GridPane.columnIndex="1" />
                                        <Label text="Minor (5pts)" GridPane.rowIndex="1" />
                                        <TextField fx:id="penMinor" text="0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    </GridPane>
                                    <Separator />
                                    <Button maxWidth="Infinity" onAction="#handleSubmitPenalty" styleClass="submit-button" text="Save Penalty" />
                                    <Label fx:id="penStatusLabel" alignment="CENTER" text="" wrapText="true" />
                                </VBox>
                            </VBox>
                        </ScrollPane>
                    </content>
                </Tab>

                <!-- TAB 3: RANKINGS -->
                <Tab text="Team Rankings">
                    <content>
                        <VBox spacing="10">
                            <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <Label styleClass="table-header-label" text="Live Rankings" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Button fx:id="editRatingButton" managed="false" onAction="#handleEditRating" text="Edit Formula" visible="false" />
                            </HBox>
                            <TableView fx:id="rankingsTableView" VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="rankTeamCol" prefWidth="70" text="Team #" />
                                    <TableColumn fx:id="rankHeatmapCol" prefWidth="85" text="Map" />
                                    <TableColumn fx:id="rankRatingCol" prefWidth="80" text="Rating" />
                                    <TableColumn fx:id="rankMatchesCol" prefWidth="60" text="Plays" />
                                    <TableColumn fx:id="rankAutoCol" text="Avg Auto" />
                                    <TableColumn fx:id="rankTeleopCol" text="Avg Tele" />
                                    <TableColumn fx:id="rankAccuracyCol" text="Accuracy" />
                                    <TableColumn fx:id="rankPenCommCol" text="Pen Given" />
                                    <TableColumn fx:id="rankPenOppCol" text="Pen Got" />
                                    <TableColumn fx:id="rankSequenceCol" text="Seq %" />
                                    <TableColumn fx:id="rankL2Col" text="L2 %" />
                                </columns>
                                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                            </TableView>
                        </VBox>
                    </content>
                </Tab>

                <!-- TAB 4: HISTORY -->
                <Tab text="History">
                    <content>
                        <VBox spacing="10">
                            <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
                            <TextField fx:id="searchField" promptText="Search Match/Team..." />
                            <TableView fx:id="historyTableView" VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="histMatchCol" text="Match" />
                                    <TableColumn fx:id="histAllianceCol" text="Alliance" />
                                    <TableColumn fx:id="histTeamsCol" text="Teams" />
                                    <TableColumn fx:id="histTotalCol" text="Total" />
                                    <TableColumn fx:id="histSubmitterCol" text="Submitter" />
                                    <TableColumn fx:id="histTimeCol" text="Time" />
                                </columns>
                                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                            </TableView>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
